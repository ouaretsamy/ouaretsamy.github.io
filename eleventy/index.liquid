---js
{
layout: 'layout.njk',
eleventyExcludeFromCollections: true,
title: 'Samy Ouaret',
  pagination: {
   data: 'collections.posts',
   size: 3,
   alias: 'posts',
   before: function(data) {
      return data.slice(-3).map(post => post).reverse();
   }
  }
}
---

{%- include "components/home.njk" -%}
<div class="flex mt-8 md:mt-4">
  <div class="md:border md:border-gray-200 md:shadow-md md:px-16 md:py-8 mx-auto">
    <h3 class="text-3xl text-gray-800">Blog</h3>
    {% include "postslist.njk" %}
    {% if posts.size != 0 %}
    <a class="text-lg hover:text-gray-700 text-blue-700" href="/blog">View all articles</a>
    {% endif %}
  </div>
</div>