---
layout: blog_layout.njk
permalink : "blog/{{ title | slugify }}/index.html"
style : /build/css/tailwind.css
templateClass:
home : /blog
---
<div class="flex flex-col mt-6 pl-3">
{% if title %}
<h1 class="font-bold text-4xl text-gray-800 p-2">{{title}}</h1>
<time class="text-md font-bold text-gray-700 pl-6 my-3">{{ date | readableDate}}</time>
{% endif %}
<article class="text-lg text-gray-900 leading-loose">
{{ content | safe }}
</article>
</div>
<link rel="stylesheet" href="/build/css/theme.css">