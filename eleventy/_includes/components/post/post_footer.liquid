<div class="mt-6">
    {%- if topics -%}
    {%- for topic in topics -%}
    {%- capture tagUrl -%}/tags/{{ topic }}/{%- endcapture -%}
    <a href="{{ tagUrl | url }}" class="px-2 py-1 text-md  rounded-sm text-gray-700 
  hover:bg-gray-200 bg-gray-300 mr-1">{{ topic }}</a>
    {%- endfor -%}
    {%- endif -%}
  </div>
<div class="my-3 p-2">
  <span class="text-lg text-gray-700 mr-2">Share </span>
  {%- capture postUrl -%}{{metadata.url}}{{page.url}}{%- endcapture -%}
  <a class="bg-blue-400 text-lg text-white rounded-full w-8 h-8 inline-block text-center leading-relaxed"
    href="http://twitter.com/share?text={{title | url_encode}}&url={{postUrl}}">
    <i class="fa fa-twitter"></i></a>
  <a class="bg-blue-600 text-lg text-white rounded-full w-8 h-8 inline-block text-center leading-relaxed"
    href="https://www.linkedin.com/shareArticle?mini=true&url={{postUrl}}&title={{title | url_encode}}">
    <i class="fa fa-linkedin"></i></a>
  <a class="bg-blue-800 text-lg text-white rounded-full w-8 h-8 inline-block text-center leading-relaxed"
    href="https://www.facebook.com/sharer/sharer.php?u={{postUrl}}">
    <i class="fa fa-facebook"></i></a>
</div>